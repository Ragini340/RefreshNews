<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:background="@color/white"
    android:paddingTop="@dimen/margin_10"
    android:orientation="vertical">

    <com.kiit.eee.ragini.refreshnews.activities.views.CustomTextView
        android:id="@+id/txt_news_source_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:textColor="@color/secondary"
        android:textSize="@dimen/font_22"
        android:textStyle="bold"
        app:typeface="sf_medium"
        android:layout_gravity="center"
        android:gravity="center"/>

    <com.kiit.eee.ragini.refreshnews.activities.views.CustomTextView
        android:id="@+id/txt_news_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_15"
        android:textStyle="bold"
        android:typeface="normal"
        app:typeface="sf_regular" />

    <com.kiit.eee.ragini.refreshnews.activities.views.CustomTextView
        android:id="@+id/txt_news_source_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:textSize="@dimen/font_12"
        app:typeface="sf_medium"
        android:textStyle="normal"/>

    <com.kiit.eee.ragini.refreshnews.views.CustomButton
        android:id="@+id/btn_load_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_10"
        android:background="@drawable/rounded_btn_bkg"
        android:gravity="center"
        android:text="@string/btn_sources_protal"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_15"
        android:textStyle="bold"
        app:typeface="sf_medium"
        android:onClick="@{viewNewsSourcePortal}"/>
</LinearLayout>

